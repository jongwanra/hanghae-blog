<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <title>메인 페이지</title>

    <style>
        * {
            font-family: "Apple SD Gothic Neo", "Nanum Barun Gothic", "Nanum Gothic", Verdana, Arial, "Malgun Gothic", Dotum, sans-serif;
        }

        .top-empty-box {
            width: 450x;
            min-width: 450px;
            height: 100px;
            min-height: 100px;
            margin: 0 auto;
        }


        .container {
            padding-top: 10px;
            width: 450px;
            min-width: 450px;
            height: 500px;
            min-height: 500px;
            background-color: white;
            margin: 0 auto;
            border-radius: 6px;
            box-shadow: 0 0.5em 1em -0.125em rgb(10 10 10 / 10%), 0 0 0 1px rgb(10 10 10 / 2%);
        }

        .title-box {
            width: 100%;
            height: 20%;
            margin-bottom: 20px;
        }

        .signup-wrap {
            width: 100%;
            height: 70%;
        }

        .signup-btn-box,
        .pwd-box,
        .pwd-confirm-box,
        .nickname-box {
            width: 100%;
            height: 28%;

        }

        .signup-btn,
        .nickname-input,
        .pwd-confirm-input,
        .pwd-input {
            width: 100%;
            height: 60%;
            outline: none;
            border: 1px solid #eaecef;
            border-radius: 4px;
            padding-left: 10px;
        }

        .nickname-input:focus,
        .pwd-input:focus,
        .pwd-confirm-input:focus {
            border-color: #28a745;
        }
    </style>

    <script>

        //회원 등록 버튼 클릭시 호출
        function registUser() {
            const userNickname = $("#nickname-input").val();
            const userPassword = $("#pwd-input").val();
            const userPasswordConfirm = $("#pwd-confirm-input").val();

            // 한개라도 비어있을 경우, 함수에서 내보내기
            if (!checkEmptyInput(userNickname, userPassword, userPasswordConfirm)) {
                return;
            }
            // 비밀번호가 일치하지 않는 경우 내보내기
            if (!checkMatchPassword(userPassword, userPasswordConfirm)) {
                return;
            }

            $.ajax({
                type: "post",
                url: `/api/user/register`,
                data: {
                    userNickname: userNickname,
                    userPassword: userPassword,
                },
                success: function (response) {
                    alert('회원등록을 성공적으로 완료하였습니다.');
                    window.location.href = "/login"; //성공시 로그인페이지로 경로이동
                },
                error: function (error) {
                    alert(error.responseJSON.errorMessage);
                    $("#nickname-input").focus();
                }
            });

        }

        // 고객이 적지 않은 정보가 있는지 체크
        function checkEmptyInput(userNickname, userPassword, userPasswordConfirm) {
            if (userNickname === "") {
                alert("닉네임을 입력해주세요.");
                $("#nickname-input").focus();
                return false;
            }
            if (userPassword === "") {
                alert("비밀번호를 입력해주세요.");
                $("#pwd-input").focus();
                return false;
            }
            if (userPasswordConfirm === "") {
                alert("비밀번호를 입력해주세요.");
                $("#pwd-confirm-input").focus();
                return false;
            }
            return true
        }

        // 비밀번호가 일치하는지 여부 확인하는 함수
        function checkMatchPassword(userPassword, userPasswordConfirm) {
            if (userPassword !== userPasswordConfirm) {
                alert("비밀번호가 일치하지 않습니다.");
                $("#pwd-input").focus();
                return false;
            }
            return true;
        }
    </script>
</head>

<body>
    <div class="wrap">
        <!-- nav bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Jongwan's Blog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">뒤로 가기</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
        <div class="top-empty-box"></div>
        <div class="container">
            <div class="title-box"></div>
            <div class="signup-wrap">
                <div class="nickname-box">
                    <input type="text" id="nickname-input" class="nickname-input" placeholder="닉네임을 입력해주세요.">
                </div>
                <div class="pwd-box">
                    <input type="password" id="pwd-input" class="pwd-input" placeholder="비밀번호를 입력해주세요.">
                </div>
                <div class="pwd-confirm-box">
                    <input type="password" id="pwd-confirm-input" class="pwd-confirm-input"
                        placeholder="비밀번호를 다시 한 번 입력해주세요.">
                </div>
                <div class="signup-btn-box">
                    <button id="signup-btn" type="button" class="btn btn-success signup-btn" onclick="registUser()">회원
                        등록</button>
                </div>
            </div>

        </div>
    </div>
</body>

</html>