<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <title>글 작성 페이지</title>

    <style>
        * {
            font-family: "Apple SD Gothic Neo", "Nanum Barun Gothic", "Nanum Gothic", Verdana, Arial, "Malgun Gothic", Dotum, sans-serif;
        }

        .container {
            margin-top: 20px;
            width: 70%;
            height: 700px;
        }

        .title-box {
            padding-top: 10px;
            padding-left: 10px;
            width: 100%;
            height: 100px;
            margin: 0 auto 20px auto;
            background-color: white;
            border-radius: 6px;
            box-shadow: 0 0.5em 1em -0.125em rgb(10 10 10 / 10%), 0 0 0 1px rgb(10 10 10 / 2%);
        }

        .content-box {
            padding-top: 10px;
            padding-left: 10px;
            width: 100%;
            height: 450px;
            margin: 0 auto 20px auto;
            background-color: white;
            border-radius: 6px;
            box-shadow: 0 0.5em 1em -0.125em rgb(10 10 10 / 10%), 0 0 0 1px rgb(10 10 10 / 2%);
        }

        .save-box {
            width: 100%;
            height: 50px;
            margin: 0 auto 20px auto;
            border-radius: 6px;
            padding-right: 10px;
        }

        #title-input {
            width: 90%;
            height: 70px;
            margin: 0 auto 20px auto;
            font-size: 30px;
            border: 0 solid black;

        }

        #content-area {
            width: 90%;
            height: 430px;
            margin: 0 auto 20px auto;
            font-size: 20px;
            border: 0 solid black;
            resize: none;
        }

        input:focus,
        #content-area {
            outline: none;
        }

        .save-btn {
            width: 100px;
            height: 100%;
            float: right;
        }

        #writer-input,
        #password-input {
            width: 70px;
            border: 0 solid black;
            border-bottom: 1px solid #eaecef;
        }
    </style>
    <script>
        function saveContents() {
            const title = $('#title-input').val();
            const content = $('#content-area').val();
            const writer = $('#writer-input').val();
            let password = $('#password-input').val();

            if (isEmptyAll(title, content, writer, password)) {
                return;
            }

            $.ajax({
                type: "post",
                url: `/api/post/add/content`,
                data: {
                    postTitle: title,
                    postWriter: writer,
                    postContent: content,
                    postPassword: password,
                },
                success: function (response) {
                    alert("컨텐츠 추가를 성공적으로 완료하였습니다.");
                    location.href = "/"; // 성공시 메인페이지로 경로이동
                }
            });
        }

        // 전부 작성한지 여부 확인
        function isEmptyAll(title, content, writer, password) {
            if (title == "") {
                $('#title-input').focus();
                alert("제목을 입력해 주세요.");
                return true;
            }
            if (content == "") {
                alert("내용을 입력해 주세요.");
                $('#content-area').focus();
                return true;
            }
            if (writer == "") {
                alert("작성자 이름을 입력해 주세요.")
                $('#writer-input').focus();
                return true;
            }
            if (password == "") {
                alert("비밀번호를 입력해 주세요.");
                $('#password-input').focus();
                return true
            }
            return false;
        }
    </script>
</head>

<body>
    <div class="wrap">
        <!-- nav bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class=" container-fluid">
                <a class="navbar-brand" href="/">Jongwan's Blog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">돌아가기</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="title-box">
                <input type="text" id="title-input" placeholder="제목을 입력해 주세요." />
            </div>
            <div class="content-box">
                <textarea spellcheck="false" type="text" id="content-area" placeholder="너의 이야기가 궁금해😍"></textarea>
            </div>
            <div class="save-box">
                <span>작성자: <input id="writer-input" placeholder="작성자" type="text"></span>
                <span>비밀번호: <input id="password-input" type="password" placeholder="4자리" maxlength="4"></span>
                <button id="save-btn" onclick="saveContents()" type="button"
                    class="btn btn-success save-btn">글쓰기</button>
            </div>

        </div>

        <div class="empty-box"></div>
    </div>
</body>

</html>