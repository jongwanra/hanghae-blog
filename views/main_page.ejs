<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/main_page.css" rel="stylesheet">
    <!-- 구글 . 좋아요 아이콘 -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <title>메인 페이지</title>
    <script>

        $(document).ready(() => {
            // 로그인이 되어있을 경우엔
            if (document.cookie) {
                // 로그아웃으로 변경
                $("#toggle-login-logout").attr("href", '/api/user/logout');
                $("#toggle-login-logout").text("로그아웃");
                $("#toggle-signup").hide();
                $("#welcome-text").show();
            } else {
                $("#toggle-login-logout").attr("href", '/login');
                $("#toggle-login-logout").text("로그인");
                $("#toggle-signup").show();
                $("#welcome-text").hide();
            }
        })

        function checkAuth(path) {
            // 쿠키가 존재하지 않다면, 로그인 페이지로 이동
            if (!document.cookie) {
                alert("로그인이 필요한 기능입니다.");
                window.location.href = "/login";
            } else {
                window.location.href = `${path}`;
            }
        }

        function toggleLikeBtn(idx, postID) {

            // 쿠키가 존재하지 않을 경우, 내보내기
            if (!document.cookie) {
                alert("로그인이 필요한 기능입니다.");
                window.location.href = "/login";
                return;
            }

            const likeBtn = $(`#like-btn${idx}`).text();
            // 좋아요 체크가 없는 경우
            if (likeBtn === "favorite_border") {
                $(`#like-btn${idx}`).text("favorite")
                addLike(idx, postID);
            }
            // 좋아요가 체크 되어 있는 경우,
            else {
                $(`#like-btn${idx}`).text("favorite_border");
                cancelLike(idx, postID);
            }
        }

        function addLike(idx, postID) {
            const likeCnt = $(`#like-cnt${idx}`).text();
            $(`#like-cnt${idx}`).text(Number(likeCnt) + 1);

            $.ajax({
                type: "post",
                url: `/api/like/${postID}`,
                data: {
                },
                success: function (response) {
                    console.log("add: success");
                },
                error: function (error) {
                    console.log("error");
                    alert(error.responseJSON.errorMessage);
                    window.location.href = "/login";
                }
            });

        }

        function cancelLike(idx, postID) {
            const likeCnt = $(`#like-cnt${idx}`).text();
            $(`#like-cnt${idx}`).text(Number(likeCnt) - 1);

            $.ajax({
                type: "delete",
                url: `/api/like/${postID}`,
                data: {
                },
                success: function (response) {
                    console.log("delete:, success");
                },
                error: function (error) {
                    console.log("error");
                    alert(error.responseJSON.errorMessage);
                    window.location.href = "/login";
                }
            });
        }
    </script>
</head>

<body>
    <div class="wrap">
        <!-- nav bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Jongwan's Blog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href=""
                                onclick="checkAuth('/write'); return false;">글작성</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="toggle-login-logout" aria-current="page"
                                href="/login">로그인</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="toggle-signup" aria-current="page" href="/register">회원가입</a>
                        </li>
                        <li class="nav-item">
                            <span id="welcome-text" class="nav-link active">
                                <%=userNickname%>님, 환영합니다.
                            </span>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
        <div class="container">
            <% for(let i=0; i< posts.length; i++){ %>
                <div class="empty-box"></div>
                <div class="card-box">
                    <div class="title-box">
                        <h2><a href="/detail/<%=posts[i].postID%>">
                                <%=posts[i].postTitle %>
                            </a>
                        </h2>
                    </div>
                    <div class="sub-box">
                        <span class="sub-content">작성일: <%=posts[i].postDate %> / </span>
                        <span class="sub-content">작성자: <%=posts[i].postWriter %></span>
                        <span id="like-cnt<%=i%>" class="like-cnt">
                            <%=posts[i].postLikeCnt%>
                        </span>
                        <button id="like-btn<%=i%>" onclick="toggleLikeBtn(<%=i%>, '<%= posts[i].postID %>')"
                            class="material-icons like">favorite_border</button>

                    </div>
                </div>
                <% } %>
        </div>
        <div class="empty-box"></div>
    </div>
</body>

</html>